pipeline {
    agent any

    environment {
        IMAGE_NAME = "my-flask-app"
        IMAGE_TAG = "v1"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/vivek-msra/flask-microservice.git', branch: 'main'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install -r app/requirements.txt'
                sh 'pip install pytest'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'pytest tests/test_main.py'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .'
            }
        }

        // Optional: Push to local registry if needed
        // stage('Push Image to Local Registry') {
        //     steps {
        //         sh 'docker tag ${IMAGE_NAME}:${IMAGE_TAG} localhost:5000/${IMAGE_NAME}:${IMAGE_TAG}'
        //         sh 'docker push localhost:5000/${IMAGE_NAME}:${IMAGE_TAG}'
        //     }
        // }
    }
}
